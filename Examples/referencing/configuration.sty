%% Figures management

\newcommand{\singlefigure}[4]{
\begin{figure}[ht!]
	\centering
	\includegraphics[width=#3\textwidth]{\fpath/#2}
	\caption{#4}%
	\label{#1}
\end{figure}
}

\makeatletter
\newcommand{\doublefigure}[9]{
\begin{figure}[ht!]
	\begin{subfigure}[H]{#4\textwidth}
		\centering\includegraphics[width=\textwidth]{\fpath/#3}
		\caption{}%
		\label{#2}
	\end{subfigure}
	\begin{subfigure}[H]{#8\textwidth}
		\centering\includegraphics[width=\textwidth]{\fpath/#7}
		\caption{}%
		\label{#6}
	\end{subfigure}
	\doublefigure@helper{#5}{#9}{#1}
}
% Permits \doublefigure to have 10 arguments
\newcommand{\doublefigure@helper}[4]{
		\caption{(a) #1 (b) #2 #4}
		\label{#3}
	\end{figure}
}
\makeatother
