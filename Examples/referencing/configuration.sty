\newcommand{\fullpagequote}[3]{
	\newpage\null\thispagestyle{empty}\newpage
	\setlength\epigraphwidth{12cm}
	\setlength\epigraphrule{0pt}
	% Actual Quote
	\vspace*{\fill}
	\epigraph{#1}
	{--- \textup{#2}, #3}
	\vspace*{\fill}
	\newpage\null\thispagestyle{empty}\newpage
}


